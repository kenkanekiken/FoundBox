<div class="container-fluid px-5 py-4">
    <div class="row border rounded border-top-0 bg-secondary bg-opacity-10">
        <div class="rounded bg-secondary bg-opacity-75 px-4 py-2">2. Item Specific Features</div>
        <div class="px-4 py-4">
            <div>
                <div>Unique Identifier / Markings</div>
                <div class="col-12 col-md-3">
                    <input type="text" class="form-control" placeholder="5 Keys together">
                </div>
            </div>
        </div>
        <div class="px-4">
            <div>High Value Item ?</div>
            <div class="btn-group col-12 col-md-3">
                <button class="btn btn-secondary dropdown-toggle d-flex justify-content-between align-items-center" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">No</button>
                <div class="dropdown-menu w-100">
                    <button class="dropdown-item" type="button">Yes</button>
                    <button class="dropdown-item" type="button">No</button>
                </div>
            </div>
        </div>
        <div class="px-4 py-4">
            <div>Additional Accessories</div>
            <div class="col-12 col-md-3">
                <input type="text" class="form-control" placeholder="Bulbasaur Keychain">
            </div>
        </div>
        <div class="px-4 pb-4">
            <div>Description</div>
            <div class="w-100">
                <textarea class="form-control" style="height: 200px;" row="6" placeholder="Describe the item in detail (e.g., color, brand, where you found it)..." maxlength="1000"></textarea>
            </div>
        </div>
    </div>
</div>

