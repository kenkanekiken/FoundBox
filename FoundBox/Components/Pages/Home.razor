@page "/"
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

@* Wallpaper *@
<div class="landing-hero d-flex justify-content-center align-items-center vh-100">
    <div class="container-sm w-100 h-25">
        <div class="d-flex flex-column flex-md-row align-items-center justify-content-center pb-2">
            <h4 class="mb-2 mb-md-0 me-md-2">Find your lost item here</h4>
            <button class="btn btn-dark h-100" @onclick="GoToPostOwner">Find Lost Item</button>
        </div>
        <div class="d-flex flex-column flex-md-row align-items-center justify-content-center">
            <h4 class="mb-2 mb-md-0 me-md-2">Return your found item here</h4>
            <button class="btn btn-dark h-100" @onclick="GoToPostFinder">Return Found Item</button>
        </div>
    </div>
</div>

<FoundBox.Components.Layout.HomeComponents.SearchBar/>
<FoundBox.Components.Layout.HomeComponents.AllitemsContainer/>



@code {
    void GoToPostFinder()
    {
        NavManager.NavigateTo("/postforfinder");
    }
    void GoToPostOwner()
    {
        NavManager.NavigateTo("/postforowner");
    }
}
